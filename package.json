{
  "name": "incidentia",
  "version": "1.0.0",
  "description": "An incident reporting app",
  "main": "index.js",
  "scripts": {
    "build": "rm -rf src/dist && babel src/ --out-dir src/dist/ --copy-files",
    "build:dev": "cross-env NODE_ENV=development nodemon --watch server --exec babel-node -- ./src/server.js",
    "start:dev": "babel-node -- src/server.js",
    "start": "cross-env NODE_ENV=production node src/dist/server.js",
    "test": "cross-env NODE_ENV=test lab -t 70",
    "test-cov-html": "lab -r html -o coverage.html",
    "heroku-postbuild": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/github.com/temmyogunbo.git"
  },
  "keywords": [
    "incident",
    "postmortem"
  ],
  "author": "Temmyogunbo",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/github.com/temmyogunbo/issues"
  },
  "homepage": "https://github.com/github.com/temmyogunbo#readme",
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "code": "^5.2.1",
    "eslint": "^5.7.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "lab": "^17.0.2",
    "lab-babel": "^1.1.1",
    "nodemon": "^1.18.4"
  },
  "dependencies": {
    "cross-env": "^5.2.0",
    "dotenv": "^6.1.0",
    "firebase": "^5.5.5",
    "glue": "^5.0.0",
    "hapi": "^17.6.0",
    "hapi-bodyparser": "^2.0.2",
    "hapi-pino": "^5.1.0",
    "joi": "^14.0.1"
  },
  "jest": {
    "collectCoverageFrom": [
      "!src/dist"
    ],
    "collectCoverage": true,
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(js)$",
    "moduleFileExtensions": [
      "js",
      "json"
    ]
  }
}
